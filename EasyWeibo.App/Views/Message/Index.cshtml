@using EasyWeibo.Model
@model IList<EasyWeibo.Model.message>

@{
    ViewBag.Title = "信息模板";
}

@{
    if (Model != null && Model.Count > 0)
    {
        <a class="btn btn-primary" href="/Message/Add">添加模板</a>
        <br/>
        <table class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>用户编号</th>
                    <th>信息内容</th>
                    <th>图片地址</th>
                    <th>视频地址</th>
                    <th>修改时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>@message.UserId</td>
                <td>@message.Message1</td>
                <td>@message.PicUrl</td>
                <td>@message.VideoUrl</td>
                <td>@message.ModifiedDate</td>
                <td><a href="/Message/Edit?id=@Html.Raw(message.ID.ToString())" class="btn btn-info">修改</a>
                <a href="/Message/Remove?id=@Html.Raw(message.ID.ToString())" class="btn btn-warning">删除</a></td>
            </tr>
        }
        </tbody>
        </table>
    }
    
    <a class="btn btn-primary" href="/Message/Add">添加模板</a>
}
